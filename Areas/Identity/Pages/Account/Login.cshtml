@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}
<style>
    * {
        color: white;
    }

    body {
        background-color: #202124;
        color: #ffffff;
    }

    .categories-section {
        border: 1px solid #333333;
        padding: 15px;
        margin-bottom: 15px;
        background-color: #202124;
    }

    .search-section {
        margin-top: 15px;
    }

    .form-check-input {
        background-color: #333333;
    }

    .form-check-label {
        color: #ffffff;
    }

    .form-control {
        background-color: #333333;
        color: #ffffff;
        border-color: #555555;
    }

    .btn-primary {
        background-color: #555555;
        border-color: #555555;
    }

    .program-container {
        border: 1px solid #333333;
        padding: 15px;
        margin-bottom: 15px;
        background-color: #444444;
    }

    .program-image {
        margin-bottom: 15px;
    }

    .program-name {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .program-description {
        margin-bottom: 10px;
    }

    .program-link {
        display: block;
        color: #ffffff;
        text-decoration: none;
        margin-bottom: 10px;
    }

    .program-link:hover {
        text-decoration: underline;
    }

    .categories-section .form-check {
        display: block;
        margin-bottom: 10px;
    }
</style>
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Используйте локальную учетную запись для входа.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Войти</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Забыли пароль?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Зарегистрироваться как новый пользователь</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Отправить подтверждение по электронной почте повторно</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
