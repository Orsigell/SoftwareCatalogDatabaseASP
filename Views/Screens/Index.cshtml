@model IEnumerable<SoftwareCatalogDatabaseASP.Models.Screens>
<style>
      * {
    color: white;
  }
    body {
        background-color: #202124;
        color: #ffffff;
    }
    
    .categories-section {
        border: 1px solid #333333;
        padding: 15px;
        margin-bottom: 15px;
        background-color: #202124;
    }
    
    .search-section {
        margin-top: 15px;
    }
    
    .form-check-input {
        background-color: #333333;
    }
    
    .form-check-label {
        color: #ffffff;
    }
    
    .form-control {
        background-color: #333333;
        color: #ffffff;
        border-color: #555555;
    }
    
    .btn-primary {
        background-color: #555555;
        border-color: #555555;
    }
    
    .program-container {
        border: 1px solid #333333;
        padding: 15px;
        margin-bottom: 15px;
        background-color: #444444;
    }
    
    .program-image {
        margin-bottom: 15px;
    }
    
    .program-name {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 10px;
    }
    
    .program-description {
        margin-bottom: 10px;
    }
    
    .program-link {
        display: block;
        color: #ffffff;
        text-decoration: none;
        margin-bottom: 10px;
    }
    
    .program-link:hover {
        text-decoration: underline;
    }
    
    .categories-section .form-check {
        display: block;
        margin-bottom: 10px;
    }    
    .program-image {
        max-width: 200px;
        max-height: 200px;
    }
</style>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Скриншоты</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Screen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Software)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               <img src="@item.Screen" alt="Screen" class="program-image" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Software.Name)
            </td>
            <td>
            @if (User.IsInRole("admin") || User.IsInRole("coach"))
            {
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Изменить</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-primary">Удалить</a>
            }
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Подробнее</a>
            </td>
        </tr>
}
    </tbody>
</table>
