@model SoftwareCatalogDatabaseASP.Models.Software
<style>
      * {
    color: white;
  }
    body {
        background-color: #202124; /* Новый фоновый цвет страницы и таблицы с категориями (темно-серый) */
        color: #ffffff; /* Цвет текста */
    }
    
    .categories-section {
        border: 1px solid #333333; /* Цвет рамки вокруг секции с категориями */
        padding: 15px;
        margin-bottom: 15px;
        background-color: #202124; /* Фон секции с категориями */
    }
    
    .search-section {
        margin-top: 15px;
    }
    
    .form-check-input {
        background-color: #333333; /* Цвет фона для чекбоксов */
    }
    
    .form-check-label {
        color: #ffffff; /* Цвет текста для чекбоксов */
    }
    
    .form-control {
        background-color: #333333; /* Цвет фона для текстового поля */
        color: #ffffff; /* Цвет текста для текстового поля */
        border-color: #555555; /* Цвет рамки для текстового поля */
    }
    
    .btn-primary {
        background-color: #555555; /* Цвет фона для кнопки "Фильтровать" */
        border-color: #555555; /* Цвет рамки для кнопки "Фильтровать" */
    }
    
    .program-container {
        border: 1px solid #333333; /* Цвет рамки вокруг контейнера с информацией о программе */
        padding: 15px;
        margin-bottom: 15px;
        background-color: #444444; /* Новый фон контейнера с информацией о программе (светло-серый) */
    }
    
    .program-image {
        margin-bottom: 15px;
    }
    
    .program-name {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 10px;
    }
    
    .program-description {
        margin-bottom: 10px;
    }
    
    .program-link {
        display: block;
        color: #ffffff;
        text-decoration: none;
        margin-bottom: 10px;
    }
    
    .program-link:hover {
        text-decoration: underline;
    }
    
    .categories-section .form-check {
        display: block; /* Сделать вывод категорий вертикальным */
        margin-bottom: 10px; /* Добавить небольшой отступ между категориями */
    }
</style>
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Изменить</h1>

<h4>Программное обеспечение</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discription" class="control-label"></label>
                <input asp-for="Discription" class="form-control" />
                <span asp-validation-for="Discription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SystemRequirements" class="control-label"></label>
                <input asp-for="SystemRequirements" class="form-control" />
                <span asp-validation-for="SystemRequirements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicensName" class="control-label"></label>
                <input asp-for="LicensName" class="form-control" />
                <span asp-validation-for="LicensName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicenseType" class="control-label"></label>
                <input asp-for="LicenseType" class="form-control" />
                <span asp-validation-for="LicenseType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicensePrice" class="control-label"></label>
                <input asp-for="LicensePrice" class="form-control" />
                <span asp-validation-for="LicensePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicenseDuration" class="control-label"></label>
                <input asp-for="LicenseDuration" class="form-control" />
                <span asp-validation-for="LicenseDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" name="Image" value="@Model.Image" />
                @if (ViewBag.imageData != null)
                {
                             <img class="mt-4 mb-4" width="200"
                    src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.imageData))">
                }
            </div>
            <div class="form-group">
                <div class="mt-4">
                    <input type="file" name="upload" class="form-control" /><br>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
