@model SoftwareCatalogDatabaseASP.Models.Software
<style>
      * {
    color: white;
  }
    body {
        background-color: #202124; /* Новый фоновый цвет страницы и таблицы с категориями (темно-серый) */
        color: #ffffff; /* Цвет текста */
    }
    
    .categories-section {
        border: 1px solid #333333; /* Цвет рамки вокруг секции с категориями */
        padding: 15px;
        margin-bottom: 15px;
        background-color: #202124; /* Фон секции с категориями */
    }
    
    .search-section {
        margin-top: 15px;
    }
    
    .form-check-input {
        background-color: #333333; /* Цвет фона для чекбоксов */
    }
    
    .form-check-label {
        color: #ffffff; /* Цвет текста для чекбоксов */
    }
    
    .form-control {
        background-color: #333333; /* Цвет фона для текстового поля */
        color: #ffffff; /* Цвет текста для текстового поля */
        border-color: #555555; /* Цвет рамки для текстового поля */
    }
    
    .btn-primary {
        background-color: #555555; /* Цвет фона для кнопки "Фильтровать" */
        border-color: #555555; /* Цвет рамки для кнопки "Фильтровать" */
    }
    
    .program-container {
        border: 1px solid #333333; /* Цвет рамки вокруг контейнера с информацией о программе */
        padding: 15px;
        margin-bottom: 15px;
        background-color: #444444; /* Новый фон контейнера с информацией о программе (светло-серый) */
    }
    
    .program-image {
        margin-bottom: 15px;
    }
    
    .program-name {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 10px;
    }
    
    .program-description {
        margin-bottom: 10px;
    }
    
    .program-link {
        display: block;
        color: #ffffff;
        text-decoration: none;
        margin-bottom: 10px;
    }
    
    .program-link:hover {
        text-decoration: underline;
    }
    
    .categories-section .form-check {
        display: block; /* Сделать вывод категорий вертикальным */
        margin-bottom: 10px; /* Добавить небольшой отступ между категориями */
    }
</style>
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удалить</h1>

<h3>Вы уверены?</h3>
<div>
    <h4>Программное обеспечение</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Discription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Discription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Link)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Link)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SystemRequirements)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SystemRequirements)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LicensName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LicensName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LicenseType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LicenseType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LicensePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LicensePrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LicenseDuration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LicenseDuration)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Назад</a>
    </form>
</div>
