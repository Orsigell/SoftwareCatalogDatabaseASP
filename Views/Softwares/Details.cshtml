@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@using static SoftwareCatalogDatabaseASP.Controllers.SoftwaresController
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model SoftwareCatalogDatabaseASP.Models.Software
<style>
      * {
    color: white;
  }
    body {
        background-color: #202124; /* Новый фоновый цвет страницы и таблицы с категориями (темно-серый) */
        color: #ffffff; /* Цвет текста */
    }
    
    .categories-section {
        border: 1px solid #333333; /* Цвет рамки вокруг секции с категориями */
        padding: 15px;
        margin-bottom: 15px;
        background-color: #202124; /* Фон секции с категориями */
    }
    
    .search-section {
        margin-top: 15px;
    }
    
    .form-check-input {
        background-color: #333333; /* Цвет фона для чекбоксов */
    }
    
    .form-check-label {
        color: #ffffff; /* Цвет текста для чекбоксов */
    }
    
    .form-control {
        background-color: #333333; /* Цвет фона для текстового поля */
        color: #ffffff; /* Цвет текста для текстового поля */
        border-color: #555555; /* Цвет рамки для текстового поля */
    }
    
    .btn-primary {
        background-color: #555555; /* Цвет фона для кнопки "Фильтровать" */
        border-color: #555555; /* Цвет рамки для кнопки "Фильтровать" */
    }
    
    .program-container {
        border: 1px solid #333333; /* Цвет рамки вокруг контейнера с информацией о программе */
        padding: 15px;
        margin-bottom: 15px;
        background-color: #444444; /* Новый фон контейнера с информацией о программе (светло-серый) */
    }
    
    .program-image {
        margin-bottom: 15px;
    }
    
    .program-name {
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 10px;
    }
    
    .program-description {
        margin-bottom: 10px;
    }
    
    .program-link {
        display: block;
        color: #ffffff;
        text-decoration: none;
        margin-bottom: 10px;
    }
    
    .program-link:hover {
        text-decoration: underline;
    }
    
    .categories-section .form-check {
        display: block; /* Сделать вывод категорий вертикальным */
        margin-bottom: 10px; /* Добавить небольшой отступ между категориями */
    }
</style>
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подробно</h1>

<div>
    <h4>Программное обеспечение</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Discription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Discription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            <input type="hidden" name="Image" value="@Model.Image" />
            @if (ViewBag.imageData != null)
            {
                <img class="mt-4 mb-4" width="200"
                src="data:image/jpeg;base64,@(Convert.ToBase64String(ViewBag.imageData))">
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Link)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Link)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SystemRequirements)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SystemRequirements)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LicensName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LicensName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LicenseType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LicenseType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LicensePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LicensePrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LicenseDuration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LicenseDuration)
        </dd>
    </dl>
        @foreach (var item in ViewBag.screens)
        {
            <img class="mt-4 mb-4" width="200"
             src="data:image/jpeg;base64,@(Convert.ToBase64String(item))">
        }
</div>
<div>
    <h4>Список категорий</h4>
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categories.First().Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categories)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(model => item.Name)
                    </td>
                    <td>
                    <a asp-controller="Categories" asp-action="DeleteCategory" asp-route-softwareId="@Model.Id" asp-route-categoryId ="@item.Id" asp-route-fromComputerDetails ="@true" class="btn btn-primary">Удалить</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
</div>

<div>
    <h4>Комментарии</h4>
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comments.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments.First().Text)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Comments)
        {
            <tr>
                <td>
                @Html.DisplayFor(model => item.Name)
                </td>
                <td>
                @Html.DisplayFor(model => item.Text)
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<form asp-controller="Comments" asp-action="SendComment" method="post">
    <div class="form-group">
        <label for="Author">Автор комментария</label>
        <input class="form-control" type="text" name="Author" />
    </div>
    <div class="form-group">
        <label for="CommentText">Текст комментария</label>
        <textarea class="form-control" name="CommentText"></textarea>
    </div>
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">Добавить комментарий</button>
</form>


